<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_delete_item_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.karoline.uiviews.DeleteItemListViewActivity">
    <TextView
        android:id="@+id/deleteitem_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical|right"
        android:paddingRight="16dp"
        android:text="编辑"/>
    <com.karoline.views.DeleteItemsListView
        android:id="@+id/deleteitem_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:scrollbars="none"/>
</LinearLayout>
